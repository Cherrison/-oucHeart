.swiper {
    height: 300rpx;
}

.swiper-image {
    width: 100%;
    height: 300rpx;
}

.top_tab {
    position: relative;
    padding-left: 160rpx;
    padding-right: 90rpx;
    border-bottom: 1px solid #dcdcdc;
}

.top_tab .picker {
    top: 0;
    left: 24rpx;
    width: 86rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: absolute;
    color: #333;
    padding-right: 24rpx;
}

.top_tab .picker label {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
}

.top_tab .picker::after {
    content: "";
    top: 35rpx;
    right: 0;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid transparent;
    border-top: 10rpx solid #333;
    position: absolute;
}

.top_tab .ic_more {
    top: 0;
    right: 0;
    width: 90rpx;
    height: 80rpx;
    background: url('https://www.52hertalk.cn/public/static/images/wx/ic-more.png') no-repeat center;
    background-size: 38rpx;
    position: absolute;
}

.top_tag {
    display: flex;
    white-space: nowrap;
    height: 80rpx;
    -webkit-overflow-scrolling: touch;
    background-color: #fff;
}

.top_tag .li {
    flex: none;
    display: inline-block;
    margin: 0 30rpx;
    color: #999;
    font-size: 30rpx;
    line-height: 76rpx;
    border-bottom: 5rpx solid transparent;
}

.top_tag .active {
    color: #2ec17d;
    border-bottom: 5rpx solid #2ec17d;
}

.allbottom{
  padding-bottom: 100rpx;
}

.list .item {
    display: block;
    padding: 24rpx;
    position: relative;
    margin-bottom: 1px;
}

.list .item::after {
    content: "";
    display: block;
    clear: both;
}

.list .item::before {
    content: "";
    bottom: -1px;
    right: 24rpx;
    width: 430rpx;
    height: 1px;
    z-index: 11;
    background-color: #dcdcdc;
    position: absolute;
}

.list .item:last-child::before {
    display: none;
}

.list .item .pic {
    float: left;
    width: 248rpx;
    height: 140rpx;
    border-radius: 10rpx;
}

.list .item_main {
    margin-left: 272rpx;
}

.list .item_main .tit {
    font-size: 28rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 4rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item_main .tit label {
    height: 26rpx;
    line-height: 26rpx;
    display: inline-block;
    vertical-align: top;
    margin-top: 2rpx;
    font-size: 22rpx;
    color: #f48e31;
    padding-left: 12rpx;
    margin-left: 12rpx;
    border-left: 1px solid #dcdcdc;
}

.list .item_main .text {
    font-size: 22rpx;
    color: #999;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item_main .tag {
    height: 30rpx;
    margin-bottom: 10rpx;
}

.list .item_main .tag label {
    height: 30rpx;
    line-height: 30rpx;
    margin-right: 12rpx;
    color: #fff;
    font-size: 22rpx;
    display: inline-block;
    vertical-align: top;
    padding: 0 6rpx;
    border-radius: 4rpx;
    background-color: #2ec17d;
}

.list .item_main .count {
    float: right;
    font-size: 22rpx;
    color: #999;
    height: 30rpx;
    line-height: 30rpx;
}

.list .item_main .type {
    color: #2ec17d;
    font-size: 24rpx;
    height: 30rpx;
    line-height: 30rpx;
    padding-left: 44rpx;
    background: url('https://www.52hertalk.cn/public/static/images/wx/expert-ic-1.png') no-repeat left;
    background-size: 34rpx 20rpx;
}

.container {
    width: 100%;
    height: 100%;
}

.container .banner {
    width: 100%;
    display: block;
}